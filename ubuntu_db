#/bin/sh

#Creating Random WP Database Credenitals
db_name="wp`date +%s`"
db_user=$db_name
db_password=`date |md5sum |cut -c '1-12'`
sleep 1
mysqlrootpass=`date |md5sum |cut -c '1-12'`
sleep 1

#### Install Packages for https and mysql
apt -y update
apt -y upgrade
apt -y install mysql-server

#### Start mysql and set root password
systemctl enable mysql
systemctl start mysql
/usr/bin/mysql -e "USE mysql;"
/usr/bin/mysql -e "UPDATE user SET Password=PASSWORD($mysqlrootpass) WHERE user='root';"

#### Adding new user to DB with all permissions
/usr/bin/mysql -u root -e "CREATE USER 'tanmay'@'localhost' IDENTIFIED WITH mysql_native_password BY 'mypass';"
/usr/bin/mysql -u root -e "CREATE USER 'tanmay'@'%' IDENTIFIED WITH mysql_native_password BY 'mypass';"

/usr/bin/mysql -u root -e "GRANT ALL PRIVILEGES ON *.* TO 'tanmay'@'localhost';"
/usr/bin/mysql -u root -e "GRANT ALL PRIVILEGES ON *.* TO 'tanmay'@'%';"

/usr/bin/mysql -e "FLUSH PRIVILEGES;"
touch /root/.my.cnf
chmod 640 /root/.my.cnf
echo "[client]">>/root/.my.cnf
echo "user=root">>/root/.my.cnf
echo "password="$mysqlrootpass>>/root/.my.cnf



##### Set WP Salts
/usr/bin/mysql -u root -e "CREATE DATABASE $db_name"
/usr/bin/mysql -u root -e "CREATE USER '$db_name'@'localhost' IDENTIFIED WITH mysql_native_password BY '$db_password';"
/usr/bin/mysql -u root -e "GRANT ALL PRIVILEGES ON $db_name.* TO '$db_user'@'localhost';"
######Display generated passwords to log file.
echo "Database Name: " $db_name
echo "Database User: " $db_user
echo "Database Password: " $db_password
echo "Mysql root password: " $mysqlrootpass
